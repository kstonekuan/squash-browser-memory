{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"lib": ["ES2022", "DOM"],
		"skipLibCheck": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"moduleDetection": "force",

		/* Type Checking */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"allowJs": true,
		"checkJs": true,
		"types": ["vite/client", "chrome"]
	}
}
