{
	"manifest_version": 3,
	"name": "Squash History Workflow Analyzer",
	"version": "1.0.0",
	"description": "Analyze your browsing history to find repetitive workflows that can be automated",
	"minimum_chrome_version": "138",
	"permissions": [
		"history",
		"storage",
		"sidePanel",
		"alarms",
		"notifications",
		"unlimitedStorage",
		"activeTab",
		"offscreen"
	],
	"host_permissions": ["https://api.anthropic.com/*"],
	"background": {
		"service_worker": "src/background.ts"
	},
	"side_panel": {
		"default_path": "sidepanel.html"
	},
	"action": {
		"default_title": "Open History Analyzer in side panel"
	},
	"content_scripts": [
		{
			"matches": [
				"https://chatgpt.com/*",
				"https://chat.openai.com/*",
				"https://claude.ai/*"
			],
			"js": ["content-scripts/universal-context.ts"],
			"run_at": "document_end",
			"all_frames": false
		}
	],
	"icons": {
		"16": "icon-16.png",
		"32": "icon-32.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	}
}
