{
	"manifest_version": 3,
	"name": "History Workflow Analyzer",
	"version": "1.0.0",
	"description": "Analyze your browsing history to find repetitive workflows that can be automated",
	"minimum_chrome_version": "138",
	"permissions": [
		"history",
		"storage",
		"sidePanel",
		"unlimitedStorage",
		"activeTab"
	],
	"host_permissions": ["https://api.anthropic.com/*"],
	"background": {
		"service_worker": "background.js"
	},
	"side_panel": {
		"default_path": "sidepanel.html"
	},
	"action": {
		"default_title": "Open History Analyzer in side panel"
	},
	"content_scripts": [
		{
			"matches": [
				"https://chatgpt.com/*",
				"https://chat.openai.com/*",
				"https://claude.ai/*"
			],
			"js": ["content-scripts/universal-context.js"],
			"type": "module",
			"run_at": "document_end",
			"all_frames": false
		}
	],
	"icons": {
		"16": "icons/icon-16.svg",
		"48": "icons/icon-48.svg",
		"128": "icons/icon-128.svg"
	}
}
