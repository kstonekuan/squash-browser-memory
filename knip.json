{
	"$schema": "https://unpkg.com/knip@latest/schema.json",
	"entry": [
		"src/sidepanel.ts",
		"src/background.ts",
		"src/offscreen.ts",
		"content-scripts/**/*.ts"
	],
	"project": ["src/**/*.{ts,js,svelte}", "content-scripts/**/*.ts"],
	"ignore": [
		"vite.config.ts",
		"vitest.config.ts",
		"src/lib/ContextSelector.svelte",
		"src/utils/platform-adapter.ts",
		"src/utils/simple-context-matcher.ts"
	],
	"ignoreDependencies": ["@tailwindcss/forms", "tailwindcss", "@types/chrome"],
	"ignoreExportsUsedInFile": {
		"interface": true,
		"type": true
	}
}
