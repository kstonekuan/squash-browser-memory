{
	"name": "history-analyzer",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"build:extension": "vite build --config vite.config.extension.ts",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
		"lint": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"check-all": "pnpm run lint && pnpm run format && pnpm run typecheck && pnpm run check && pnpm run test:run && pnpm run build",
		"verify": "pnpm run typecheck && pnpm run check && pnpm run build"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/forms": "^0.5.10",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@tsconfig/svelte": "^5.0.4",
		"@types/chrome": "^0.0.328",
		"@types/dom-chromium-ai": "^0.0.9",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"jsdom": "^26.1.0",
		"postcss": "^8.5.6",
		"svelte": "^5.34.7",
		"svelte-check": "^4.2.2",
		"tailwindcss": "^3.4.17",
		"typescript": "~5.8.3",
		"vite": "^7.0.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@google/genai": "^1.7.0",
		"openai": "^5.8.2"
	}
}
